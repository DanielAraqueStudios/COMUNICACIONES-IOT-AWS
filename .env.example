# Environment Configuration for LocalStack
# Copy this file to .env and customize as needed

# ============================================================================
# LOCALSTACK CONFIGURATION
# ============================================================================

# Set to 'true' to use LocalStack, 'false' to use AWS production
USE_LOCALSTACK=true

# LocalStack endpoint URL
LOCALSTACK_ENDPOINT=http://localhost:4566

# AWS Region (used for both LocalStack and AWS)
AWS_DEFAULT_REGION=us-east-1

# ============================================================================
# AWS CREDENTIALS (for LocalStack - dummy values)
# ============================================================================

# LocalStack accepts any credentials, these are dummy values
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# ============================================================================
# KINESIS STREAM NAMES
# ============================================================================

# Main stream for anomaly detection (consumer_and_anomaly_detector.py)
KINESIS_STREAM_ANOMALY=BSMStream

# Stream for DynamoDB persistence (consume_and_update.py)
KINESIS_STREAM_DB=BSM_Stream

# Stream for local consumer (local_consumer.py)
KINESIS_STREAM_LOCAL=BSM_Data_Stream1

# ============================================================================
# DYNAMODB CONFIGURATION
# ============================================================================

# DynamoDB table name for storing anomalies
DYNAMODB_TABLE_NAME=BSM_anamoly

# ============================================================================
# IOT CONFIGURATION (for production AWS only)
# ============================================================================

# AWS IoT Core endpoint (only needed when USE_LOCALSTACK=false)
# IOT_ENDPOINT=a1b2c3d4e5f6g7.iot.us-east-1.amazonaws.com

# MQTT Topic
# IOT_TOPIC=healthcare/monitors/BSM_G101

# Device ID
# DEVICE_ID=BSM_G101

# Certificate paths (only needed when USE_LOCALSTACK=false)
# IOT_ROOT_CA=certificates/root-CA.crt
# IOT_CERTIFICATE=certificates/device.cert.pem
# IOT_PRIVATE_KEY=certificates/device.private.key

# ============================================================================
# TELEMETRY CONFIGURATION
# ============================================================================

# Publishing frequencies (in seconds)
PUBLISH_FREQ_HEARTRATE=1
PUBLISH_FREQ_TEMPERATURE=15
PUBLISH_FREQ_OXYGEN=10

# ============================================================================
# ANOMALY DETECTION THRESHOLDS
# ============================================================================

# Heart Rate (bpm)
HEARTRATE_MIN=60
HEARTRATE_MAX=100

# SpO2 (%)
SPO2_MIN=85
SPO2_MAX=110

# Temperature (Â°F)
TEMPERATURE_MIN=96
TEMPERATURE_MAX=101

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Enable debug logging
DEBUG=true

# Consumer polling interval (seconds)
CONSUMER_POLL_INTERVAL=0.2
